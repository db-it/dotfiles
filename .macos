###############################################################################
# Finder                                                                      #
###############################################################################

# show status & path bar
defaults write com.apple.finder ShowStatusBar -bool true
defaults write com.apple.finder ShowPathbar -bool true

# Set default view style
# Cover Flow View: Flwv
# List View: Nlsv
# Column View: clmv
# Icon View: icnv

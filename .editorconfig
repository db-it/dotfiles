#
# EditorConfig Properties: https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
#

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
# default tab_width is indent_size
tab_width = 4

# not supported by all editors. Docs: https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties#max_line_length
max_line_length = 130

trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
